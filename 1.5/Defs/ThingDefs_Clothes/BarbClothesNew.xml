<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Barbarian Tribal outfit -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>pphhyy_Barbarian_BarbTribalBelt</defName>
    <label>Barbarian Tribal outfit</label>
    <description>Barbarian Tribal belt made from animal furs.</description>
    <graphicData>
      <texPath>Apparel/BarbTribalBelt/BarbTribalBelt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <techLevel>Neolithic</techLevel>
    <costStuffCount>60</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <tradeability>Sellable</tradeability>
    <statBases>
      <MaxHitPoints>40</MaxHitPoints>
      <WorkToMake>1200</WorkToMake>
      <Mass>0.3</Mass>
      <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.20</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.20</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.0</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <useWornGraphicMask>true</useWornGraphicMask>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/BarbTribalBelt/BarbTribalBelt</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>pphhyy_Barbarian_BarbThrallApparel</li>
      </tags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
    </apparel>
    <recipeMaker>
      <recipeUsers>
        <li>pphhyy_Barbarians_Building_ArmorBench</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>

</Defs>